<Window x:Class="Views.Genericgrid"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Views"
        xmlns:users="clr-namespace:UserControls"
        mc:Ignorable="d"
     WindowChrome.ResizeGripDirection="BottomRight"
	    ResizeMode="CanResizeWithGrip"
           Title="Genericgrid" Height="450" Width="800">
    <Grid Background="{StaticResource Black4}" >
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="45"/>
        </Grid.RowDefinitions>

        <users:DatagridControl x:Name="GenGridCtrl"   
            Background="{StaticResource Black4}"
            FontSize="16"
            Tablename="BankAccount"/>

        <ComboBox x:Name="SqlTables" 
                  Grid.Row="1" HorizontalAlignment="Right" 
                  Width="200" Height="25"  FontSize="16"
                  Margin="0,5,140,5" Background="Green" 
                  SelectionChanged="SqlTables_SelectionChanged"/>
        <CheckBox x:Name="ToggleColumnHeaders" Checked="ToggleColumnHeaders_Checked"
                  Content="Toggle Column headers" HorizontalAlignment="Right" Foreground="White" FontSize="16"
                  Click="ToggleColumnHeaders_Click"  Height="20" Margin="0,3,350,0" Grid.Row="1" Grid.RowSpan="2" Width="184"/>
        <Button Height="35" Width="160" Content="Show Full Columns Schema" 
                HorizontalAlignment="Left"
                Click="ShowColumnInfo_Click" Margin="5,0,0,0" 
                Background="Green" Grid.Row="1" />
        <Button Height="35" Width="110" Content="Close" 
                HorizontalAlignment="Right"
                Click="Close_Click" Margin="5,0,10,0" 
                Background="Red" Foreground="White"  Grid.Row="1" />
    </Grid>
</Window>
