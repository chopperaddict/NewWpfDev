        <Button x:Name="MsgBtn" 
                   HorizontalAlignment="Right"
                Width="130"
                Style="{StaticResource BtnStyle1}" Margin="0,3,87,0" Grid.Row="2" Click="SendWinMsg">
            <Button.Background>
                <SolidColorBrush x:Name="BackgroundBrush" Color="Green"/>
            </Button.Background>
            <Button.Foreground>
                <SolidColorBrush x:Name="ForegroundBrush" Color="White"/>
            </Button.Foreground>
            <Button.Content>
                <StackPanel>
                    <TextBlock Text="Broadcast Message" FontSize="12" TextAlignment="Center"/>
                    <TextBlock Text="(to InterWinComms)" FontSize="12" TextAlignment="Center"/>
                </StackPanel>
            </Button.Content>
            <Button.Triggers>
                <EventTrigger RoutedEvent="Button.MouseEnter">
                    <EventTrigger.Actions>
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetName="BackgroundBrush" 
                                                Storyboard.TargetProperty="Color"
                                                From="Green"
                                                To="Orange" 
                                                FillBehavior="HoldEnd"
                                                AccelerationRatio="0.4" DecelerationRatio="0.4"
                                                Duration="0:0:1"/>
                                <ColorAnimation Storyboard.TargetName="ForegroundBrush" 
                                                Storyboard.TargetProperty="Color"
                                                From="White"
                                                To="Black" 
                                                FillBehavior="HoldEnd"
                                                AccelerationRatio="0.4" DecelerationRatio="0.4" 
                                                Duration="0:0:0.3"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger.Actions>
                </EventTrigger>
                <EventTrigger RoutedEvent="Button.MouseLeave">
                    <EventTrigger.Actions>
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetName="BackgroundBrush" 
                                                Storyboard.TargetProperty="Color"
                                                From="Orange"
                                                FillBehavior="HoldEnd"
                                                AccelerationRatio="0.4" DecelerationRatio="0.4"
                                                To="Green" Duration="0:0:0.5"/>
                                <ColorAnimation Storyboard.TargetName="ForegroundBrush" 
                                                Storyboard.TargetProperty="Color"
                                                From="Black"
                                                To="White" 
                                                FillBehavior="HoldEnd"
                                                AccelerationRatio="0.4" DecelerationRatio="0.4"                                                
                                                Duration="0:0:0.3"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger.Actions>
                </EventTrigger>
            </Button.Triggers>
