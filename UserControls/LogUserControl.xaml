    <Grid>
        <ListBox x:Name="logview" Margin="5 5 5 5" 
            ContextMenu="{StaticResource ContextMenu}"
            ItemContainerStyle="{StaticResource ListBoxItemStyle1}"
            Background="BlueViolet" Foreground="White" 
