    </UserControl.Resources>

    <!--//Setup Data Context here, NOT in Class file-->
    <UserControl.DataContext>
        <models:BankAccountVM></models:BankAccountVM>
    </UserControl.DataContext>

    <Grid x:Name="maingrid"  >

        <Grid.RowDefinitions>
            <RowDefinition Height="1"/>
            <RowDefinition x:Name="row1" Height="*"/>
            <RowDefinition  Height="45"/>
        </Grid.RowDefinitions>

        <!--// splitters content grid-->
        <!--Height="{Binding ActualHeight, ElementName=row1, Converter={StaticResource ReduceWidth}, ConverterParameter=5}"-->
        <Grid  x:Name="SplitterGrid" Grid.Row="1" Grid.RowSpan="1" 
               VerticalAlignment="Top">
            <Grid.RowDefinitions>
                <RowDefinition x:Name="rw1" MinHeight="100"/>
                <RowDefinition x:Name="rw2" MinHeight="100"/>
            </Grid.RowDefinitions>

            <!--// Top datagrid-->
            <StackPanel Orientation="Vertical" Grid.Row="0" Height="{Binding ActualHeight, ElementName=maingrid}" VerticalAlignment="Top">

                <TextBlock x:Name="GenericTitle1" Grid.Row="0" Text="Title bar"
                        TextAlignment="Center" HorizontalAlignment="Left" 
                        Background="{StaticResource Red5}" FontSize="18" 
                         Padding="0 0 0 0" 
                        PreviewKeyDown="genkeydown" Height="25"
                        Width="{Binding Path=ActualWidth, ElementName=GenGridControl}" 
                        Style="{DynamicResource DarkmodeTBlock}" 
                        Margin="10,0,10,0"/>
                <!--.. Column headrs working !!-->

                <!--// On Top section in Splitter-->
                <DataGrid  x:Name="datagrid1"      
                      AddingNewItem="dgProducts_AddingNewItem" 
                      AutoGenerateColumns="true"
                      AutoGeneratingColumn="datagrid1_AutoGeneratingColumn"
                      Background="{StaticResource Black2OrangeSlant}"
                      BeginningEdit="dgProducts_BeginningEdit" 
                      BorderBrush="Blue"
                      ColumnHeaderStyle="{StaticResource ColumnHeaderStyle}"
                      CanUserAddRows="{Binding Path=canUserAddRows, ElementName=GenGridControl}"
                      CanUserResizeColumns="True"
                      DataContext="{Binding ElementName=GenGridControl}"
                      FontSize="{Binding fontsize,ElementName=GenGridControl}"
                      FontWeight="{Binding FontWeight, ElementName=GenGridControl}"
                      Foreground="White"                  
                      HorizontalAlignment="Left" 
                      Grid.Row="0"
                      Grid.ColumnSpan="4"
                      Grid.RowSpan="1"
                      Height="{Binding Path=ActualHeight, ElementName=GenGridControl, Converter={StaticResource ReduceWidth}, ConverterParameter=-20}" 
                      IsReadOnly="false"
                      IsSynchronizedWithCurrentItem="True" 
                      Margin="10 3 0 0"
                      PreviewKeyDown="dgProducts_PreviewKeyDown1" 
                      PreviewMouseLeftButtonDown="MouseLeftButtonDown1"
                      PreviewMouseDoubleClick="datagrid1_PreviewMouseDoubleClick"
                           PreviewMouseRightButtonUp="datagrid1_PreviewMouseRightButtonUp"
                      RowBackground="Transparent"
                       DataGridRow.Selected="Grid_Selected"
                      RowHeight="22"
                      RowEditEnding="dgProducts_RowEditEnding"     
                      SelectionMode="Single"
                      VerticalAlignment="Top"
                      VerticalGridLinesBrush="White"
                      VerticalScrollBarVisibility="{Binding vscrollBar}"         
                      Visibility="Visible" 
                      Width="{Binding Path=Width, ElementName=GenGridControl, Converter={StaticResource ReduceWidth}, ConverterParameter=-10}"
                           GotFocus="datagrid1_GotFocus" 
                           IsTabStop="True">
                    <!--<DataGrid.ItemTemplate>
                        <DataTemplate>
                            
                            <TextBox Text="{Binding Path=Field1}"/>
                        </DataTemplate>
                    </DataGrid.ItemTemplate>-->
                    <!--<DataGrid.Columns>
                        <DataGridTemplateColumn Header="Field2" CellTemplate="{StaticResource DisplayColumnTemplate2}"/>
                        <DataGridTemplateColumn Header="Field3" CellTemplate="{StaticResource DisplayColumnTemplate3}"/>
                        <DataGridTemplateColumn Header="Field4" CellTemplate="{StaticResource DisplayColumnTemplate4}"/>

                    </DataGrid.Columns>-->
                    
                </DataGrid>

            </StackPanel>

            <!--// bottom section in Splitter-->
            <StackPanel Orientation="Vertical" Grid.Row="1"  Margin="0 10 0 0" Height="{Binding ActualHeight, ElementName=maingrid}" VerticalAlignment="Top">
                <TextBlock x:Name="GenericTitle2" Grid.Row="0" Text="Title bar" Margin="10 10 10 0"
                   TextAlignment="Center" HorizontalAlignment="Left" Background="{StaticResource Red5}" FontSize="18" Padding="0 0 0 0" 
                   PreviewKeyDown="genkeydown" Height="25"
                   Width="{Binding Path=ActualWidth, ElementName=GenGridControl}" Style="{DynamicResource DarkmodeTBlock}" />

                <DataGrid x:Name="datagrid2"   
                      AddingNewItem="dgProducts_AddingNewItem" 
                      AutoGenerateColumns="True"
                      Background="{StaticResource Black2OrangeSlant}"
                      BeginningEdit="dgProducts_BeginningEdit" 
                      BorderBrush="LightGreen"
                      ColumnHeaderStyle="{StaticResource ColumnHeaderStyle}"
                      CanUserAddRows="{Binding Path=canUserAddRows, ElementName=GenGridControl}"
                      CanUserResizeColumns="True"
                      DataContext="{Binding ElementName=GenGridControl}"
                      Height="{Binding Path=ActualHeight, ElementName=GenGridControl, Converter={StaticResource ReduceWidth}, ConverterParameter=-20}" 
                      FontSize="{Binding fontsize,ElementName=GenGridControl}"
                      Foreground="White"
                      FontWeight="{Binding FontWeight, ElementName=GenGridControl}"
                      Grid.Row="1"
                      Grid.ColumnSpan="4"
                      Grid.RowSpan="2"
                      HorizontalAlignment="Left" 
                      IsReadOnly="False"
                      IsSynchronizedWithCurrentItem="True" 
                      Margin="10 5 0 0"                          
                      PreviewKeyDown="dgProducts_PreviewKeyDown2" 
                      PreviewMouseLeftButtonDown="MouseLeftButtonDown2"
                      PreviewMouseDoubleClick="datagrid2_PreviewMouseDoubleClick"
                      RowBackground="Transparent"
                      RowEditEnding="dgProducts_RowEditEnding"     
                      RowHeight="22"
                      SelectionMode="Single"
                      VerticalAlignment="Top"
                      VerticalGridLinesBrush="White"
                      VerticalScrollBarVisibility="{Binding vscrollBar}"         
                      Visibility="Visible" 
                      Width="{Binding Path=Width, ElementName=GenGridControl, Converter={StaticResource ReduceWidth}, ConverterParameter=-10}" GotFocus="datagrid2_GotFocus">
                    <!--MouseEnter="datagrid2_MouseEnter"
                      MouseLeave="datagrid2_MouseLeave"-->
                </DataGrid>

            </StackPanel>

            <GridSplitter x:Name="Splitter"
                    ResizeDirection="Rows"         
                    Grid.Row="1"
                    Height="26"
                    Margin="10 0 10 0"
                    DragStarted="Splitter_DragStarted"  
                    DragCompleted="Splitter_DragCompleted"
                    PreviewMouseLeftButtonDown="Splitter_PreviewMouseLeftButtonDown"
                    PreviewMouseLeftButtonUp="Splitter_PreviewMouseLeftButtonUp"
                    Panel.ZIndex="2"   
                    VerticalAlignment="Top"
                    HorizontalAlignment="Stretch">
                <GridSplitter.Template>
                    <ControlTemplate>
                        <Border  Height="12" BorderThickness="2" BorderBrush="{StaticResource Cyan2}" 
                                 Margin="0 0 0 0"  Background="{StaticResource Yellow1}">
                            <Grid 
						        Background="Transparent">
                                <!--// Create Rows for each datagrid that are part of the splitter -->
                                <Grid.RowDefinitions>
                                    <RowDefinition  Height="{Binding ActualHeight, ElementName=maingrid}"/>
                                    <RowDefinition Height="{Binding ActualHeight, ElementName=maingrid}"/>
                                </Grid.RowDefinitions>
                                <!--<TextBlock Text="Drag ^v to resize grids..." Height="20" HorizontalAlignment="Center" 
                                           Background="Green" Foreground="Black" 
                                           FontWeight="DemiBold" 
                                           Margin="0 0 0 0"
                                           Padding="0 0 0 0"/>-->
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </GridSplitter.Template>

            </GridSplitter>
        </Grid>

        <!--#region bottom button bar-->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Grid.Row="2" Background="Transparent" Grid.ColumnSpan="4">

            <Button x:Name="maskcols" HorizontalAlignment="Left" Height="35" Width="100" Click="Button2_Click"
                    FontWeight="Bold" Padding="40 0 0 0"
                    Style="{StaticResource DarkmodeButton}"
                    Margin="10 0 5 0" Content="Show Columns"/>
            <!--<Button HorizontalAlignment="Left" Height="35" Width="80" Click="Button1_Click"
                    FontWeight="Bold" Content="Clear Grid"
                    Style="{StaticResource DarkmodeButton}" Margin="0 0 5 0" />-->
            <Button  x:Name="viewSchema" HorizontalAlignment="Left" Height="35" Width="80" Click="viewschema"
                    Style="{StaticResource DarkmodeButton}" Margin="0 0 5 0" Content="Schema ?"/>
            <Button  x:Name="addnewrow" HorizontalAlignment="Left" Height="35" Width="80" Click="AddNew"
                    Style="{StaticResource DarkmodeButton}" Margin="0 0 5 0" Content="Add New"/>
            <Button  x:Name="updaterow" HorizontalAlignment="Left" Height="35" Width="70" Click="UpdateRecord"
                    Style="{StaticResource DarkmodeButton}" Foreground="White" Margin="0 0 5 0" Content="Update"/>
            <Button  x:Name="deleterow" HorizontalAlignment="Left" Height="35" Width="70"  Click="DeleteRecord"
                    Style="{StaticResource DarkmodeButton}" Foreground="White" Margin="0 0 20 0" Content="Delete"/>


            <!--ItemContainerStyle="{StaticResource CBitemContainerStyle}"-->
            <Button  x:Name="Togglegrid" HorizontalAlignment="Left" Height="35" Width="70" Click="Togglegrid_Click"
                    Style="{StaticResource DarkmodeButton}" Foreground="White" Margin="5 0 20 0" Content=" Grid 1"/>

        </StackPanel>
        <!--#endregion bottom button bar-->

        <!--// the UserControl MUST always be named ""Flowdoc""   EXACTLY (case sensitive)
		// You need to wrap the entire window area in a Canvas (I suggest it is named ""canvas"")
		// but it can be placed anywhere inside the main Grid or whatever is used  to wrap the entire window
		// Ensure it is set as Visibility="COLLAPSED"
		// It s recommended to always name if just "canvas" for contiinuty across all controls using Flowdoc-->

        <Canvas x:Name="canvas" Grid.Row="0"
				Canvas.Left="0" Canvas.Top="0"
				HorizontalAlignment="Stretch"
				VerticalAlignment="Stretch"
				Height="{Binding Path=Height, ElementName=maingrid}"
				Width="{Binding Path=Width, ElementName=maingrid}"
				Panel.ZIndex="4"
                PreviewKeyDown="Flowdoc_PreviewKeyDown"
				Background="Transparent"
                Visibility="Collapsed">

            <user:FlowDoc x:Name="Flowdoc"
				backGround="{StaticResource Gray5}"
				borderColor="{StaticResource Orange1}"
				Canvas.Left="45"
				Canvas.Top="64"
				Height="300"
				Margin="0 0 0 0"
				MouseLeftButtonUp="Flowdoc_MouseLeftButtonUp"
                PreviewKeyDown="Flowdoc_PreviewKeyDown"
				MouseMove="Flowdoc_MouseMove"
				LostFocus="Flowdoc_LostFocus"
				Opacity="1"
				Panel.ZIndex="4"
				PreviewMouseLeftButtonDown="LvFlowdoc_PreviewMouseLeftButtonDown"
				Visibility="Collapsed"
				Width="520" />

            <view1:GenericSelectBoxControl  x:Name="SelectionListbox" 
				Panel.ZIndex="5"
                Visibility="Collapsed"
               Height="350" Width="400"/>

                <!--Margin="65 35 0 0"-->
        </Canvas>
    </Grid>
</UserControl>
